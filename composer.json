{
  "name": "brick/std",
  "description": "An attempt at a standard library for PHP",
  "type": "library",
  "keywords": [
    "Brick",
    "Std"
  ],
  "license": "MIT",
  "require": {
    "php": "^7.2|^8.0"
  },
  "require-dev": {
    "ext-curl": "*",
    "ext-json": "*",
    "phpunit/phpunit": "^8.1",
    "php-coveralls/php-coveralls": "^2.2"
  },
  "suggest": {
    "ext-json": "Needed to use JsonEncoder and JsonDecoder"
  },
  "autoload": {
    "psr-4": {
      "Brick\\Std\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Brick\\Std\\Tests\\": "tests/"
    }
  }
}
